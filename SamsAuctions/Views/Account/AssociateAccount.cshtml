@model AssociateAccountViewModel

@{
    ViewData["Title"] = "Lägg till uppgifter";
}

<!-- Modal -->
<div id="associateAccountModal" class="modal fade" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <a asp-action="Login" class="close">&times;</a>       
                <h4 class="modal-title">Lägg till användaruppgifter</h4>
            </div>
            <div class="modal-body">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <form asp-action="AssociateAccount" method="post">
                    <div class="form-group">
                        <label asp-for="FirstName"></label>
                        <input asp-for="FirstName" class="form-control" />
                        <span asp-validation-for="FirstName"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="LastName"></label>
                        <input asp-for="LastName" class="form-control" />
                        <span asp-validation-for="LastName"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Email"></label>
                        <input asp-for="Email" class="form-control" />
                        <span asp-validation-for="Email"></span>
                    </div>

                    <button type="submit" class="btn btn-primary">Spara</button>
                </form>
            </div>
            <div class="modal-footer">             
            </div>
        </div>

    </div>
</div>

@section Scripts{ 
    <script>
        $(window).on('load', () => {
            $('#associateAccountModal').modal('show');
        });
    </script>
}
@model AuctionViewModel


<!-- Modal -->
<div id="editAuctionModal" class="modal fade" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <a href="javascript: closeEditModal();" class="close">&times;</a>
                <h4 class="modal-title">Lägg till/uppdatera auktion</h4>
            </div>
            <div class="modal-body">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <form id="editAuctionForm" asp-action="EditAuction" method="post">
                    <input type="hidden" name="AuctionId" value="@Model.AuctionId" />
                    <input type="hidden" name="GroupCode" value="@Model.GroupCode" />
                    <input type="hidden" name="CreatedBy" value="@Model.CreatedBy" />
                    <div class="form-group">
                        <label asp-for="Title"></label>
                        <input asp-for="Title" class="form-control" />
                        <span asp-validation-for="Title"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Description"></label>
                        <input asp-for="Description" class="form-control" />
                        <span asp-validation-for="Description"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="StartDate"></label>
                        <input asp-for="StartDate"  class="form-control" />
                        <span asp-validation-for="StartDate"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="EndDate"></label>
                        <input asp-for="EndDate" class="form-control" />
                        <span asp-validation-for="EndDate"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ReservationPrice"></label>
                        <input asp-for="ReservationPrice" class="form-control" />
                        <span asp-validation-for="ReservationPrice"></span>
                    </div>
                   
                    <button type="submit" class="btn btn-primary">Spara</button>
                    <a href="javascript: closeEditModal();" class="btn btn-secondary">Avbryt</a>
                </form>


            </div>
            <div class="modal-footer">
            </div>
        </div>

    </div>
</div>
